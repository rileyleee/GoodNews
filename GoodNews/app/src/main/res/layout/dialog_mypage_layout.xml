<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/myPageDialogCard"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:background="@drawable/card_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/myPageguideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/myPageguideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/myPageDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보 수정"
        android:textSize="26sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/myPageDialogCard"
        app:layout_constraintStart_toStartOf="@+id/myPageDialogCard"
        app:layout_constraintTop_toTopOf="@+id/myPageDialogCard" />

    <TextView
        android:id="@+id/dialogMypageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        style="@style/MyPageUpdateInfo"
        app:layout_constraintStart_toStartOf="@+id/myPageguideline3"
        app:layout_constraintTop_toBottomOf="@+id/myPageDialogTitle" />

    <TextView
        android:id="@+id/dialogMypageNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김싸피"
        android:textSize="21dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypageName" />

    <TextView
        android:id="@+id/dialogMypagePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        style="@style/MyPageUpdateInfo"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypageNameEdit" />

    <TextView
        android:id="@+id/dialogMypagePhoneEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="000-0000-0000"
        android:textSize="21dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypagePhone" />

    <TextView
        android:id="@+id/dialogMypagebirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        style="@style/MyPageUpdateInfo"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypagePhoneEdit" />

    <TextView
        android:id="@+id/dialogMypageYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000년"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="@id/dialogMypageNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypagebirth" />

    <TextView
        android:id="@+id/dialogMypageMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01월"
        android:textSize="21sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageYear"
        app:layout_constraintEnd_toStartOf="@id/dialogMypageDay"
        app:layout_constraintStart_toEndOf="@id/dialogMypageYear"
        app:layout_constraintTop_toTopOf="@+id/dialogMypageYear" />


    <TextView
        android:id="@+id/dialogMypageDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01일"
        android:textSize="21sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageYear"
        app:layout_constraintStart_toEndOf="@+id/dialogMypageMonth"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypagebirth"
        app:layout_constraintEnd_toStartOf="@id/calendar"/>


    <ImageView
        android:id="@+id/calendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_calendar_month_24"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageDay"
        app:layout_constraintStart_toEndOf="@id/dialogMypageDay"
        app:layout_constraintTop_toTopOf="@id/dialogMypageDay"/>


    <TextView
        android:id="@+id/dialogMypageGender"
        style="@style/MyPageUpdateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypageDay"
        />

    <TextView
        android:id="@+id/dialogMypageMan"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/input_stroke"
        android:gravity="center"
        android:text="남자"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypageGender"
        app:layout_constraintEnd_toStartOf="@id/dialogMypageWoman"/>

    <TextView
        android:id="@+id/dialogMypageWoman"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/input_stroke"
        android:gravity="center"
        android:text="여자"
        android:textSize="16dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageMan"
        app:layout_constraintEnd_toStartOf="@+id/myPageguideline5"
        app:layout_constraintStart_toEndOf="@id/dialogMypageMan"
        app:layout_constraintTop_toTopOf="@+id/dialogMypageMan" />

    <TextView
        android:id="@+id/dialogMypageBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈액형"
        style="@style/MyPageUpdateInfo"
        app:layout_constraintStart_toStartOf="@+id/dialogMypageName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMypageMan" />

    <TextView
        android:id="@+id/dialogMypageRhEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rh+"
        android:textSize="21sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/dialogMypageNameEdit"
        app:layout_constraintTop_toBottomOf="@id/dialogMypageBlood"/>

    <TextView
        android:id="@+id/dialogMyPageBloodEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O형"
        android:textSize="21sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageRhEdit"
        app:layout_constraintStart_toEndOf="@id/dialogMypageRhEdit"
        app:layout_constraintTop_toTopOf="@+id/dialogMypageRhEdit"/>

    <ImageView
        android:id="@+id/updateBlood"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/mypage_blood"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogMypageRhEdit"
        app:layout_constraintStart_toEndOf="@+id/dialogMyPageBloodEdit"
        app:layout_constraintTop_toTopOf="@+id/dialogMypageRhEdit" />



