<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tmap.TMapNoWifiDialogFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_shape"
        android:padding="20dp">

        <ImageView
            android:id="@+id/toast_no_wifi_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginTop="30dp"
            android:src="@drawable/no_wifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/noWifiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네트워크가 원활하지 않습니다.\n데이터 네트워크 또는 Wi-Fi\n연결 상태 확인 후 다시 시도해주세요."
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/toast_no_wifi_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/noWifiButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="확인하기"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:background="@drawable/btn_match_parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noWifiTextView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>