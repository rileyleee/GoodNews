<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/groupBox"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_component"
        android:backgroundTint="@color/sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/groupPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김싸피, 이싸피, 선싸피, 신싸피"
        android:textSize="21sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/groupBox"
        app:layout_constraintTop_toTopOf="@+id/groupBox" />

    <ImageView
        android:id="@+id/groupPersonImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/groupPeople"
        app:layout_constraintEnd_toStartOf="@+id/personnel1"
        app:layout_constraintTop_toTopOf="@+id/groupPeople" />

    <TextView
        android:id="@+id/personnel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/font_color"
        android:textSize="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/groupPersonImage"
        app:layout_constraintEnd_toEndOf="@+id/groupBox"
        app:layout_constraintTop_toTopOf="@+id/groupPersonImage" />

    <TextView
        android:id="@+id/lastChatting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="마지막 대화 내용"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/groupBox"
        app:layout_constraintStart_toStartOf="@+id/groupPeople"
        app:layout_constraintTop_toBottomOf="@id/groupPeople" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/chatting_new"
        app:layout_constraintTop_toTopOf="@id/lastChatting"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>