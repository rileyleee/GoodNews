<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tmap.TMapFragment">

    <FrameLayout
        android:id="@+id/tmapViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="안녕"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tMapFacilityTypeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 서브 카테고리 -->
    <RadioGroup
        android:id="@+id/tMapSubCategoryWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tMapFacilityTypeList">

        <RadioButton
            android:id="@+id/tMapRadioAll"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/facility_sub_color_selector"
            android:button="@drawable/facility_sub_color_selector"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="전체"
            android:textColor="@drawable/facility_text_color_selector" />

        <RadioButton
            android:id="@+id/tMapRadioCivilDefense"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/facility_sub_color_selector"
            android:button="@drawable/facility_sub_color_selector"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="민방위"
            android:textColor="@drawable/facility_text_color_selector" />

        <RadioButton
            android:id="@+id/tMapRadioTsunami"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/facility_sub_color_selector"
            android:button="@drawable/facility_sub_color_selector"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="지진해일"
            android:textColor="@drawable/facility_text_color_selector" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/findMyLocationButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/facility_color_selector"
        android:gravity="center"
        android:src="@drawable/baseline_my_location_24"
        android:tint="@color/main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tMapGuideLine" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tMapGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

</androidx.constraintlayout.widget.ConstraintLayout>