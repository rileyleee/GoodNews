<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/alarmDangerousImg"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_dangerous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmDangerousText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="주변 20미터 이내에 위험이 감지되었습니다. 주의 바랍니다."
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/alarmDangerousImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmDangerousTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="위험 내용 : 불 났어요."
        android:textColor="@color/font_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alarmDangerousImg"
        app:layout_constraintTop_toBottomOf="@+id/alarmDangerousText" />

</androidx.constraintlayout.widget.ConstraintLayout>