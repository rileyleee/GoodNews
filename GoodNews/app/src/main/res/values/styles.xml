<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  추가 정보 입력 Label  -->
    <style name="EnterInfoLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  페이지 상단 타이틀 (예: 알림, 긴급 손전등, 내 그룹...)  -->
    <style name="FragmentTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  페이지 서브 타이틀 (예: 알림 목록, 모스부호 메시지...)  -->
    <style name="FragmentSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  설명 텍스트 (12px, #545454)  -->
    <style name="AddText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/explain_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--  모임 장소 아이템 별 숫자  -->
    <style name="MeetingPlaceNumber" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="backgroundTint">@color/main</item>
    </style>
</resources>